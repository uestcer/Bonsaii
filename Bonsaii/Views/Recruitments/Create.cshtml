<script>
     /*员工工号搜索*/
    $('#BillType').typeahead
            ({
                source:
                    function (query,process) {
                        $.ajax({
                            url: '/Recruitments/BillTypeSearch',
                            type: 'POST',
                            data: { number:query  },
                            success: function (data) {
                                console.info("data=" + data);
                                if(data.success===true)
                                {
                                    console.info(data.data)
                                    /*下拉菜单*/
                                    process(data.data);
                                }
                            }
                        })
                    },
            });
</script>