<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>盆景企业管理平台</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/jquery-accordion-menu.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-accordion-menu.js"></script>

</head>
<body>
    
    @Html.Partial("_LayoutHeaderPartial")
    

    <section>
        <div class="menu collapse in" id="menu">

           
            <div id="jquery-accordion-menu" class="jquery-accordion-menu">
                @* <div class="jquery-accordion-menu-header" id="form"></div>*@
                <ul id="demo-list">

                    <li>
                        <a href="#">常规设置</a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("录入常用语","Index","Phrase")</li>
                        </ul>
                    </li>

                    <li>
                        <a href="#">人事管理 </a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("员工档案管理", "Index", "Staff")</li>  
                            <li>@Html.ActionLink("员工技能管理", "Index", "StaffSkill")</li>                       
                            
                            <li><a href="#">厂牌管理 </a></li>
                            <li><a href="#">人事变更管理 </a></li>
                            <li><a href="#">合同管理 </a></li>
                            <li><a href="#">离职档案管理 </a></li>
                            <li><a href="#">离职申请管理 </a></li>
                            <li>@Html.ActionLink("招聘需求管理","Index","Recruitments") </a></li>
                            <li><a href="#">招聘信息发布 </a></li>
                            <li><a href="#">应聘管理 </a></li>
                            <li><a href="#">培训发起 </a></li>
                            <li><a href="#">培训通知 </a></li>
                            <li><a href="#">培训记录 </a></li>


                        </ul>
                    </li>


                    <li>
                        <a href="#">组织结构 </a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("企业信息管理", "Details", "Company")</li>
                            @*<li>@Html.ActionLink("集团企业管理", "Index", "GroupCompany")</li>*@
                            <li>@Html.ActionLink("部门信息管理", "Index", "Department")</li>
                        </ul>
                    </li>


                    <li>
                        <a href="#">管理子系统维护 </a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("管理员信息管理","Index","User")</li>
                            @*<li><a href="#">角色管理 </a></li>*@
                        </ul>
                    </li>
                    <li>
                        <a href="#">人事参数设置 </a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("基础数据管理","Index","StaffParams")</li>
                            <li>@Html.ActionLink("基本参数设置", "Manage", "StaffBasicParams")</li>
                            @*<li>@Html.ActionLink("国家", "Index", "Nationality")</li>
                            <li>@Html.ActionLink("健康状况", "Index", "Health")</li>
                            <li>@Html.ActionLink("学历", "Index", "Background")</li>
                            <li>@Html.ActionLink("民族", "Index", "Nation")</li>
                            <li>@Html.ActionLink("技能管理", "Index", "SkillParameter")</li>*@
                        </ul>
                    </li>


                    <li>
                        <a href="#">基本信息管理</a>
                        <ul class="submenu">
                            <li>@Html.ActionLink("设置编码规则", "Index", "ParamCodes")</li>
                            <li>@Html.ActionLink("设置单据性质", "Index", "BillPropertyModels")</li>
                        </ul>
                    </li>
                </ul>

            </div>
        </div>
        
            <div class="container-fluid main" style="margin-top:15px;"> @RenderBody()</div>
    

    </section>
    @Html.Partial("_LayoutFooterPartial")




    @RenderSection("scripts", required: false)
    
    <script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery("#jquery-accordion-menu").jqueryAccordionMenu();

    });

    $(function () {
        //顶部导航切换
        $("#demo-list li").click(function () {
            $("#demo-list li.active").removeClass("active")
            $(this).addClass("active");
        })
    })
    </script>

</body>
</html>
